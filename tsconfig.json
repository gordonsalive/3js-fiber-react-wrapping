{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./dist/",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        "allowJs": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2015"
        ]
    },
    "exclude": [
      "node_modules"
    ]
}
